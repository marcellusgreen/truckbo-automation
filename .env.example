# TruckBo Fleet Compliance - Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=truckbo
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=30000

# ===========================================
# AWS S3 CONFIGURATION
# ===========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=truckbo-documents

# Optional: Use S3-compatible service (MinIO, DigitalOcean Spaces, etc.)
# S3_ENDPOINT=https://nyc3.digitaloceanspaces.com

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# JWT Secret for authentication
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# ===========================================
# EXTERNAL API KEYS (Optional)
# ===========================================
# Claude API for document processing (REQUIRED for PDF/image processing)
ANTHROPIC_API_KEY=your_claude_api_key_here
VITE_ANTHROPIC_API_KEY=your_claude_api_key_here

# OpenAI API for enhanced OCR processing
OPENAI_API_KEY=your_openai_api_key

# Google Cloud Vision API for OCR
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_KEY_FILE=path/to/service-account.json

# ===========================================
# NOTIFICATION SERVICES (Optional)
# ===========================================
# SendGrid for email notifications
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@yourcompany.com

# Twilio for SMS alerts
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# MONITORING & LOGGING (Optional)
# ===========================================
# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn

# DataDog for monitoring
DATADOG_API_KEY=your_datadog_key

# ===========================================
# REDIS CONFIGURATION (Optional - for caching)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
# S3 bucket for database backups
BACKUP_S3_BUCKET=truckbo-backups
BACKUP_RETENTION_DAYS=90

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
LOG_LEVEL=debug
ENABLE_API_DOCS=true
CORS_ORIGIN=http://localhost:5173

# Mock data for development
USE_MOCK_DATA=false
MOCK_DOCUMENT_COUNT=50