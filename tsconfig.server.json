{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./api/dist",
    "noEmit": false,
    "module": "ESNext",
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false
  },
  "include": ["server/**/*.ts", "shared/**/*.ts"]
}
